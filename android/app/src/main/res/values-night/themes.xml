<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    
    <!-- Dark theme using Material Components for professional dark mode -->
    <style name="Base.Theme.Mubitt" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary colors adjusted for dark theme contrast -->
        <item name="colorPrimary">@color/mubitt_green_light</item>
        <item name="colorPrimaryVariant">@color/mubitt_green</item>
        <item name="colorPrimaryDark">@color/mubitt_green_dark</item>
        
        <!-- Secondary colors for dark theme -->
        <item name="colorSecondary">@color/mubitt_brown_light</item>
        <item name="colorSecondaryVariant">@color/mubitt_brown</item>
        
        <!-- Accent colors -->
        <item name="colorAccent">@color/mubitt_orange</item>
        <item name="colorError">@color/mubitt_red</item>
        
        <!-- Dark surface colors -->
        <item name="colorSurface">@color/mubitt_gray_900</item>
        <item name="colorOnSurface">@color/mubitt_gray_50</item>
        <item name="android:colorBackground">@color/mubitt_gray_900</item>
        
        <!-- Dark system UI -->
        <item name="android:statusBarColor">@color/mubitt_gray_900</item>
        <item name="android:navigationBarColor">@color/mubitt_gray_900</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Dark typography -->
        <item name="android:textColorPrimary">@color/mubitt_gray_50</item>
        <item name="android:textColorSecondary">@color/mubitt_gray_300</item>
    </style>

</resources>