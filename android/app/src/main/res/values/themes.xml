<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    
    <!-- 
    Hybrid Theme Strategy: AppCompat base for compatibility + Material Design Components
    This ensures robustness while maintaining modern Material Design principles
    -->
    
    <!-- Base application theme using Material Components (robust Material3 support) -->
    <style name="Base.Theme.Mubitt" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary Mubitt brand colors optimized for San Juan -->
        <item name="colorPrimary">@color/mubitt_green</item>
        <item name="colorPrimaryVariant">@color/mubitt_green_dark</item>
        <item name="colorPrimaryDark">@color/mubitt_green_dark</item>
        
        <!-- Secondary colors -->
        <item name="colorSecondary">@color/mubitt_brown</item>
        <item name="colorSecondaryVariant">@color/mubitt_brown_light</item>
        
        <!-- Accent and interaction colors -->
        <item name="colorAccent">@color/mubitt_orange</item>
        <item name="colorError">@color/mubitt_red</item>
        
        <!-- Surface colors -->
        <item name="colorSurface">@color/mubitt_gray_50</item>
        <item name="colorOnSurface">@color/mubitt_gray_900</item>
        <item name="android:colorBackground">@color/mubitt_gray_50</item>
        
        <!-- System UI colors -->
        <item name="android:statusBarColor">@color/mubitt_green</item>
        <item name="android:navigationBarColor">@color/mubitt_green</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Typography and spacing -->
        <item name="android:textColorPrimary">@color/mubitt_gray_900</item>
        <item name="android:textColorSecondary">@color/mubitt_gray_600</item>
    </style>

    <!-- Main theme that extends base theme -->
    <style name="Theme.Mubitt" parent="Base.Theme.Mubitt">
        <!-- Additional customizations can be added here -->
    </style>

</resources>